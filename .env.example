# Fake Checker Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ========================================
# API Configuration
# ========================================

# Hive AI API Configuration
# Get your API key from: https://thehive.ai/api
VITE_HIVE_API_KEY=your_hive_ai_api_key_here

# API Base URL (default: https://api.thehive.ai/api/v2)
# Change this if using a custom API endpoint
VITE_API_BASE_URL=https://api.thehive.ai/api/v2

# ========================================
# Application Configuration
# ========================================

# Application Title (displayed in browser tab and header)
VITE_APP_TITLE=Fake Checker

# Application Version (for debugging and analytics)
VITE_APP_VERSION=1.0.0

# Application Description
VITE_APP_DESCRIPTION=AI-powered image authenticity detection

# Environment (development, staging, production)
VITE_NODE_ENV=production

# ========================================
# Feature Flags
# ========================================

# Enable/disable features for different deployment environments
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_DEBUG_MODE=false
VITE_DEV_MODE=false

# ========================================
# Security Configuration
# ========================================

# Content Security Policy settings
VITE_CSP_REPORT_URI=/csp-report

# Rate limiting (requests per minute)
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW_MS=60000

# ========================================
# Storage & File Processing Configuration
# ========================================

# File size limits (in bytes)
VITE_MAX_FILE_SIZE=10485760

# Maximum number of files
VITE_MAX_FILES=10

# Supported image formats
VITE_SUPPORTED_FORMATS=image/jpeg,image/png,image/webp,image/gif

# Image processing limits
VITE_MAX_IMAGE_DIMENSION=2048

# Cache settings
VITE_CACHE_TTL_HOURS=24
VITE_MAX_CACHE_SIZE_MB=100

# ========================================
# Optional: Analytics & Monitoring
# ========================================

# Google Analytics (optional)
VITE_ANALYTICS_ID=

# Sentry Error Reporting (optional)
VITE_ERROR_REPORTING_KEY=

# Application Insights (optional)
VITE_APP_INSIGHTS_CONNECTION_STRING=

# ========================================
# Development Only
# ========================================

# Mock API responses for development
VITE_USE_MOCK_API=false

# Enable React DevTools in production builds
VITE_ENABLE_REACT_DEVTOOLS=false

# ========================================
# Setup Instructions
# ========================================

# 1. Copy this file to .env.local:
#    cp .env.example .env.local
#
# 2. Get your Hive AI API key:
#    - Visit: https://thehive.ai/api
#    - Sign up for an account
#    - Generate an API key
#    - Replace 'your_hive_ai_api_key_here' with your actual key
#
# 3. Configure other settings as needed for your deployment
#
# 4. Important Security Notes:
#    - Never commit .env.local to version control
#    - Use different API keys for development/staging/production
#    - Rotate API keys regularly
#    - Monitor API usage and set appropriate rate limits
#
# 5. For production deployment:
#    - Set environment variables through your hosting platform
#    - Use secrets management for sensitive values
#    - Enable monitoring and error reporting